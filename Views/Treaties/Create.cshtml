@model InsuranceAgency__.Models.Treaty

@{
    ViewData["Title"] = "Create";
}

<h1>Для оформления договора заполните следующую форму!</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TypeTreaty" class="control-label"></label>
                <input asp-for="TypeTreaty" class="form-control" />
                <span asp-validation-for="TypeTreaty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfInsuranceTreaty" class="control-label"></label>
                <input asp-for="TypeOfInsuranceTreaty" class="form-control" />
                <span asp-validation-for="TypeOfInsuranceTreaty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PolicySeries" class="control-label"></label>
                <input asp-for="PolicySeries" class="form-control" />
                <span asp-validation-for="PolicySeries" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PolicyNumber" class="control-label"></label>
                <input asp-for="PolicyNumber" class="form-control" />
                <span asp-validation-for="PolicyNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsurancePremium" class="control-label"></label>
                <input asp-for="InsurancePremium" class="form-control" />
                <span asp-validation-for="InsurancePremium" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsuranceSum" class="control-label"></label>
                <input asp-for="InsuranceSum" class="form-control" />
                <span asp-validation-for="InsuranceSum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfPaymentTreaty" class="control-label"></label>
                <input asp-for="DateOfPaymentTreaty" class="form-control" />
                <span asp-validation-for="DateOfPaymentTreaty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreatyCurrency" class="control-label"></label>
                <input asp-for="TreatyCurrency" class="form-control" />
                <span asp-validation-for="TreatyCurrency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StateOfTreaty" class="control-label"></label>
                <input asp-for="StateOfTreaty" class="form-control" />
                <span asp-validation-for="StateOfTreaty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdClient" class="control-label"></label>
                <input asp-for="IdClient" class="form-control" />
                <span asp-validation-for="IdClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Отправить данные" class="btn btn-primary" onclick=" alert('Договор успешно оформлен! Далее занесите клиента в БД!!!')"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a href="\Home\Index">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
