    ViewData["Title"] = "Delete";
}

<h1>Удаление данных об оплате</h1>

<h3>Действительно ли вы хотите удалить данные об оплате ?</h3>
<div>
    <h4>Payment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReceiptNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReceiptNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FIO)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FIO)
        </dd>
